-   
    function getColClass(state){
        const state2color = {
            down: "text-danger",
            up: "text-success",
            unknown: "text-secondary",
        };
        const col = state2color[state.toLowerCase()];
        if(col){
            return col;
        }
        return state2color["unknown"];
    }
    
table#network-interfaces-table.table.table-hover.table-responsive-sm.table-responsive-md.table-responsive-lg.table-responsive-xl
        thead
            tr
                th NAME
                th STATE
                th
        tbody
            each netInf, index in netInfs
                tr 
                    td(style="width: 15%;")= netInf.iface
                    td(style="width: wrap-content;" class=getColClass(netInf.operstate))= netInf.operstate
                    td  
                        if index === active
                            span.active-nw(id=`nwStatsShow-${index}`) Current
                        else
                            a(href="" id=`nwStatsShow-${index}` onclick=`onNwInterfaceShow(event, ${index})`) Show
